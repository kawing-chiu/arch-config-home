# Usage:
#   - create session:
#       sc -S <session_name>
#   - list sessions:
#       sc -ls
#   - attach to session:
#       sc -x <session_name>
#   - detach within session:
#       C-a d
hardstatus alwayslastline
hardstatus string '%0`:%n%40=%D %M %d %C %A%=%l'

backtick 0 30 30 sh -c 'screen -ls | egrep -o "$PPID[^[:space:]]*"'

escape ^a^a

vbell off
startup_message off

autodetach on

defscrollback 10000


