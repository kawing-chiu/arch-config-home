hardstatus alwayslastline
hardstatus string '%0`%42=%D %M %d %C %A%=%l'

backtick 0 30 30 sh -c 'screen -ls | egrep -o "$PPID[^[:space:]]*"'

escape ^a^a
bind o other

vbell off
startup_message off

autodetach on

defscrollback 10000


# change some stupid/dangerous key bindings
# kill
bind k
bind ^k
bind K kill
# quit(kill all)
#bind \

# split vertically
bind ^v eval "split -v" "focus" "screen"


